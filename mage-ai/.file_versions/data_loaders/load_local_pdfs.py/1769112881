import os
import PyPDF2

@data_loader
def load_data_from_directory(*args, **kwargs):
    # Docker path that maps to your Mac's data/raw folder
    data_path = '/home/src/data/raw'
    docs = []

    # PM Check: Ensure the directory exists
    if not os.path.exists(data_path):
        return []

    for filename in os.listdir(data_path):
        if filename.endswith('.pdf'):
            filepath = os.path.join(data_path, filename)
            with open(filepath, 'rb') as f:
                reader = PyPDF2.PdfReader(f)
                full_text = ""
                for page in reader.pages:
                    full_text += page.extract_text() or ""
                
                # We store the metadata (filename) so dbt can use it later
                docs.append({
                    'filename': filename,
                    'text': full_text
                })
    
    return docs
